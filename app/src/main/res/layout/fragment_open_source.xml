<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="?attr/mainBackground"
              tools:context=".Fragments.OpenSourceFragment">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            app:navigationIcon="?attr/homeAsUpIndicator"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/mainBackground"/>

    <TextView
            android:text="List of resources used in Notes Sync"
            android:textColor="@color/colorAccent"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/app_compat"
                    android:text="AndroidX Appcompat"
                    style="@style/openLinks"/>

            <TextView
                    android:id="@+id/recycler_view"
                    android:text="AndroidX RecyclerView"
                    style="@style/openLinks"/>

            <TextView
                    android:id="@+id/constraint_layout"
                    android:text="AndroidX ConstraintLayout"
                    style="@style/openLinks"/>

            <TextView
                    android:id="@+id/lifecycle"
                    android:text="AndroidX Lifecycle(LiveData and ViewModel)"
                    style="@style/openLinks"/>

            <TextView
                    android:id="@+id/navigation"
                    android:text="Jetpack Navigation"
                    style="@style/openLinks"/>

            <TextView
                    android:id="@+id/room"
                    android:text="Jetpack Room"
                    style="@style/openLinks"/>

            <TextView
                    android:id="@+id/workmanager"
                    android:text="Jetpack Workmanager"
                    style="@style/openLinks"/>

            <TextView
                    android:id="@+id/bottom_sheet"
                    android:text="Android support design(Bottom sheet)"
                    style="@style/openLinks"/>

            <TextView
                    android:id="@+id/kotlin"
                    android:text="Kotlin"
                    style="@style/openLinks"/>

            <TextView
                    android:id="@+id/coroutines"
                    android:text="Kotlin Coroutines"
                    style="@style/openLinks"/>

            <TextView
                    android:id="@+id/checklist"
                    android:text="Checklist View"
                    style="@style/openLinks"/>

            <TextView
                    android:id="@+id/icons"
                    android:text="Icons8"
                    style="@style/openLinks"/>

            <TextView
                    android:id="@+id/drive_rest"
                    android:text="Drive REST API v3"
                    style="@style/openLinks"/>

            <TextView
                    android:id="@+id/google_oauth"
                    android:text="Google OAuth 2.0"
                    style="@style/openLinks"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>